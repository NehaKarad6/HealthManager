<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.neha.healthmanager.Doctor_dash">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linlay_1">

        <ImageView
            android:id="@+id/imgHistory1"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hospital"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imgVitals1"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_stethoscope"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/imgReports1"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_report"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linlay_2"
        android:layout_below="@+id/linlay_1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="History"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Vitals"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Reports"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linlay_2"
        android:id="@+id/linlay_3"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imgMeds1"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_pills"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imgNewCase"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hospital"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logout"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linlay_4"
        android:layout_below="@+id/linlay_3">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Medications"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="New Case"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Logout"
            android:textColor="#000000"
            android:textAlignment="center"/>

    </LinearLayout>






</RelativeLayout>


