<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linlay_1">

        <ImageView
            android:id="@+id/imgHistory"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hospital"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imgVitals"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_stethoscope"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/imgDoc"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_doctor"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linlay_2"
        android:layout_below="@+id/linlay_1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="History"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Vitals"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Doctors"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linlay_2"
        android:id="@+id/linlay_3"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imgMeds"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_pills"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imgEmergency"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hospital"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/imgReports"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_report"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linlay_4"
        android:layout_below="@+id/linlay_3">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Medications"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="EMERGENCY"
            android:textColor="#e53935"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Reports"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linlay_6"
        android:layout_below="@+id/linlay_5"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Insurance"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.28"
            android:layout_height="39dp"
            android:text="Emergency contacts"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="Log Out"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linlay_5"
        android:layout_below="@+id/linlay_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp">

        <ImageView
            android:id="@+id/imgInsurance"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_ins"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/imgEmergencyContact"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_emergency_call"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logout"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</RelativeLayout>