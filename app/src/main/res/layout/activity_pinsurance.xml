<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
                        tools:context="com.example.abhms.healthmanagement.PInsurance">


            <LinearLayout
                android:id="@+id/CompanyName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:ems="5"
                    android:text="Company Name" />

                <EditText
                    android:id="@+id/EdtCompanyName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@android:drawable/editbox_background_normal"

                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="10dip" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/PhoneNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_below="@+id/CompanyName"
                android:layout_marginRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:ems="5"
                    android:text="Policy Number" />

                <EditText
                    android:id="@+id/EdtPolicyNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:padding="10dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/NameOnCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_below="@+id/PhoneNumber"
                android:layout_marginRight="10dip"

                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:ems="5"
                    android:text="Name On Card" />

                <EditText
                    android:id="@+id/EdtNameOnCard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@android:drawable/editbox_background_normal"

                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="10dip" />

            </LinearLayout>











            <LinearLayout
                android:id="@+id/PlanName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_below="@+id/NameOnCard"
                android:layout_marginRight="10dip"

                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:ems="5"
                    android:text="Plan Name" />

                <EditText
                    android:id="@+id/EdtPlanName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@android:drawable/editbox_background_normal"

                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="10dip" />

            </LinearLayout>













            <LinearLayout
                android:id="@+id/Coverage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_below="@+id/PlanName"
                android:layout_marginRight="10dip"

                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:ems="5"
                    android:text="Coverage" />

                <EditText
                    android:id="@+id/EdtCoverage"
                    android:inputType="number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@android:drawable/editbox_background_normal"

                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="10dip" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/CoverageEndDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_below="@+id/Coverage"
                android:layout_marginRight="10dip"

                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:ems="5"
                    android:text="Coverage Start Date" />

                <EditText
                    android:id="@+id/EdtCoverageEndDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@android:drawable/editbox_background_normal"

                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="10dip" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/CoverageStartDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_below="@+id/CoverageEndDate"
                android:layout_marginRight="10dip"

                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:ems="5"
                    android:text="Coverage End Date" />

                <EditText
                    android:id="@+id/EdtCoverageStartDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@android:drawable/editbox_background_normal"

                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="10dip" />

            </LinearLayout>









            <LinearLayout
                android:id="@+id/BtnSubmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_below="@+id/CoverageStartDate"

                android:gravity="center_vertical"
                android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSubmitIns"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:gravity="center"

            android:text="Submit"/>
    </LinearLayout>























        </RelativeLayout>
    </LinearLayout>
</ScrollView>
